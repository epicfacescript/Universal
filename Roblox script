-- 各タブのページ管理
local Pages = {}
local function createPage(name)
	local page = Instance.new("ScrollingFrame")
	page.Name = name .. "Page"
	page.Size = UDim2.new(1, 0, 1, 0)
	page.BackgroundTransparency = 1
	page.Visible = false
	page.ScrollBarThickness = 2
	page.CanvasSize = UDim2.new(0, 0, 0, 1000)
	page.Parent = Container
	Pages[name] = page
	local pageList = Instance.new("UIListLayout")
	pageList.Padding = UDim.new(0, 10)
	pageList.Parent = page
	return page
end

-- タブ切り替え
local TabButtons = {}
local function switchTab(name)
	for tabName, page in pairs(Pages) do page.Visible = (tabName == name) end
	for tabName, btn in pairs(TabButtons) do
		btn.BackgroundColor3 = (tabName == name) and Color3.fromRGB(0, 190, 255) or Color3.fromRGB(30, 30, 30)
	end
end

local function createTabBtn(name)
	local btn = Instance.new("TextButton")
	btn.Name = name .. "Tab"
	btn.Size = UDim2.new(1, -5, 0, 35) -- スクロールバーに被らないよう少し幅を調整
	btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
	btn.Text = name
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 10
	btn.Parent = Sidebar
	local btnCorner = Instance.new("UICorner")
	btnCorner.CornerRadius = UDim.new(0, 6)
	btnCorner.Parent = btn
	TabButtons[name] = btn
	btn.MouseButton1Click:Connect(function() switchTab(name) end)
end

-- 実行ボタン作成
local function createExecBtn(parent, text, scriptStr, isSpecial)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -10, 0, 40)
	btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
	btn.Text = text
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 14
	btn.Parent = parent
	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 8)
	corner.Parent = btn
	btn.MouseButton1Click:Connect(function()
		if isSpecial then
			loadstring(game:HttpGet(scriptStr, true))()
		else
			loadstring(game:HttpGet(scriptStr))()
		end
	end)
end

